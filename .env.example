# Twitter API Tokens (JSON array of token objects)
# Each token: {"bearer_token": "...", "ct0": "...", "auth_token": "..."}
# Get these from browser DevTools when logged into Twitter
TWITTER_TOKENS='[]'

# Proxy configuration (optional)
# Format: http://user:pass@host:port or socks5://host:port
PROXY_URLS=[]

# LLM API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
KIMI_API_KEY=sk-...

# Database
DATABASE_URL=sqlite+aiosqlite:///data/xspider.db

# Scraping settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_MS=1000
MAX_FOLLOWINGS_PER_USER=500
CRAWL_DEPTH=2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
